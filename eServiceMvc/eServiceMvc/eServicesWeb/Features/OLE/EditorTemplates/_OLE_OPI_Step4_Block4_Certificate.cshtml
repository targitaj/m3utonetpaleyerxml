@using Uma.Eservices.Models.OLE.Enums
@model Uma.Eservices.Models.FormCommons.AttachmentBlock
@using (Html.BeginUmaExpander("Attach a certificate of acceptance / attendance from a Finnish educational institution | required", "acordStep4", true))
{
    <div class="upload-text">
        @T("Maximum 4 MB per single attachment.")
    </div>
    using (Html.BeginForm(MVC.OLE.Actions.UploadFile(AttachmentTypeEnum.Certificate, Model.ApplicationId, null), FormMethod.Post, new { data_upload_template_id = "template-upload-4", data_download_template_id = "template-download-4" }))
    {
        @Html.UmaAjaxFileUpload(4194304, Url.Action(MVC.OLE.Actions.UploadFile(AttachmentTypeEnum.Certificate, Model.ApplicationId, null)), MVC.Shared.Views._MultiFileUpload, Model, MVC.OLE.ActionNames.DeleteFile, MVC.OLE.ActionNames.DownloadFile, "template-upload-4", "template-download-4")
    }
}
