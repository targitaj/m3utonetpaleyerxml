<Window x:Class="AceRemoteControl.Information"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AceRemoteControl"
        mc:Ignorable="d"
        Title="Information" Height="120" Width="1500"
        WindowStyle="None">
    <Grid Background="CadetBlue">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Name="tbText" FontSize="70" FontWeight="Bold" Foreground="Black"/>
            <TextBlock Margin="10 0 0 0" Name="tbName" FontSize="70" FontWeight="Bold" Foreground="White"/>
        </StackPanel>
        

    </Grid>
</Window>
