@using Uma.Eservices.Models.OLE.Enums
@model Uma.Eservices.Models.FormCommons.AttachmentBlock
@using (Html.BeginUmaExpander("Attach valid travel document | required", "acordStep4"))
{
    <div class="upload-text">
        @T("Maximum 4 MB per single attachment.")
    </div>
    using (Html.BeginForm(MVC.OLE.Actions.UploadFile(AttachmentTypeEnum.Travel, Model.ApplicationId, null), FormMethod.Post, new { data_upload_template_id = "template-upload-1", data_download_template_id = "template-download-1" }))
    {
        @Html.UmaAjaxFileUpload(4194304, Url.Action(MVC.OLE.Actions.UploadFile(AttachmentTypeEnum.Travel, Model.ApplicationId, null)), MVC.Shared.Views._MultiFileUpload, Model, MVC.OLE.ActionNames.DeleteFile, MVC.OLE.ActionNames.DownloadFile, "template-upload-1", "template-download-1")
    }
}
