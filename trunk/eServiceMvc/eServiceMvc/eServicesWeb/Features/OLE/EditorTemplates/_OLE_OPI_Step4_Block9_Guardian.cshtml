@using Uma.Eservices.Models.OLE.Enums
@model Uma.Eservices.Models.FormCommons.AttachmentBlock
@using (Html.BeginUmaExpander("Attach guardian consent form | optional", "acordStep4", true))
{
    <div class="upload-text">
        @T("This is for applicants who are under the age of 18 and must get the consent from theirparents to come to study in Finland. Maximum 4 MB per single attachment.")
    </div>
    using (Html.BeginForm(MVC.OLE.Actions.UploadFile(AttachmentTypeEnum.Guardian, Model.ApplicationId, null), FormMethod.Post, new { data_upload_template_id = "template-upload-9", data_download_template_id = "template-download-9" }))
    {
        @Html.UmaAjaxFileUpload(4194304, Url.Action(MVC.OLE.Actions.UploadFile(AttachmentTypeEnum.Guardian, Model.ApplicationId, null)), MVC.Shared.Views._MultiFileUpload, Model, MVC.OLE.ActionNames.DeleteFile, MVC.OLE.ActionNames.DownloadFile, "template-upload-9", "template-download-9")
    }
}
