@model Uma.Eservices.Models.Account.VerifyCodeViewModel
@{
    ViewBag.Title = "Enter Verification Code";
}
<div class="row">
    <div class="path-descr">
        <div>@T("Home")</div>
        <div>@T("Browser enablement")</div>
    </div>
</div>

<h1>@T(ViewBag.Title)</h1>

@using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.Hidden("provider", @Model.Provider)
    <h4>@T("To ensure correct person is accessing this application, we need you to enter the code sent to you via e-mail in field below. This will allow to access eService from this browser.")</h4>
    if (ViewBag.Status != null)
    {
    <h4>@ViewBag.Status</h4>
    }
    <hr />
    
    <div class="row form-row">
        <div class="col-sm-8">
            <div class="form-group">
                @Html.UmaLabelFor(m => m.Code)
                @Html.UmaTextBoxFor(m => m.Code)
                @Html.ValidationMessageFor(m => m.Code)
            </div>
        </div>
    </div>
    @*<div class="row form-row">
        @Html.UmaCheckBoxButtonFor(m => m.RememberBrowser, @T("Remember this browser").ToString())
    </div>*@

        <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/formjs")
}
