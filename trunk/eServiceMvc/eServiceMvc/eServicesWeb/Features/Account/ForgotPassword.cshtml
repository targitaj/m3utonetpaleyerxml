@model Uma.Eservices.Models.Account.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgotten password";
}
<div class="row">
    <div class="path-descr">
        <div>@T("Home")</div>
        <div>@T("Forgot password")</div>
    </div>
</div>

<h1>@T(ViewBag.Title)</h1>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <h4>@T("Please, enter e-mail of user account. We will send link to this account e-mail to change password for it.")</h4>
    <h4>@ViewBag.Status</h4>
    <hr />

    <div class="row form-row">
        <div class="col-sm-8">
            <div class="form-group">
                @Html.UmaLabelFor(m => m.EmailAddress)
                @Html.UmaTextBoxFor(m => m.EmailAddress)
                @Html.ValidationMessageFor(m => m.EmailAddress)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/formjs")
}
